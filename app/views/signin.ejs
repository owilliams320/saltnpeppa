<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <script src="/jquery-1.11.3.min.js" type="text/javascript"></script>
        
        <link rel="stylesheet" href="/materialize/css/materialize.min.css" >
        <script src="/materialize/js/materialize.min.js" type="text/javascript"></script>
    </head>
    <body>
        
        <h1>Sign In</h1>
        
        <% for (var i=0; i<messages.length; i++) {%>
            <div class="flash"><%=messages[i]%></div>
        <% } %>
        <form action="/signin" method="POST">
            <div class="mui-form-group">
                <input type="text" name="username" />
                <label class="mui-form-floating-label">User Name</label>
            </div>
            
            <div class="mui-form-group">
                <input type="password" name="password" />
                <label class="mui-form-floating-label">Password</label>
            </div>
            
            <br />
            
            <button class="btn waves-effect waves-light" type="submit" name="action">Sign In</button>
        </form>
        
    </body>
</html>